@model MyClass.Model.Products

@{
    ViewBag.Title = "Chi tiết sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="wrapper">
    <!-- Main Sidebar Container -->
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger">CHI TIẾT SẢN PHẨM</strong>
                        </div>
                        <a href="@Url.Action("Index","Product")" class="btn-sm btn-info"><i class="fa fa-long-arrow-alt-left"> Quay lại</i></a>
                    </div>
                </div>
                <div class="card-body">
                    @*hien thi dong thong bao*@
                    @Html.Partial("Message")
                    <table class="table table-bordered table-striped" id="myTable">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Id)</th>
                                <th>@Html.DisplayNameFor(model => model.CatId)</th>
                                <th>@Html.DisplayNameFor(model => model.Name)</th>
                                <th>@Html.DisplayNameFor(model => model.SupplierId)</th>
                                <th>@Html.DisplayNameFor(model => model.Price)</th>
                                <th>@Html.DisplayNameFor(model => model.Qty)</th>
                                <th>@Html.DisplayNameFor(model => model.Image)</th>
                                <th>@Html.DisplayNameFor(model => model.Status)</th>
                            </tr>
                        </thead>
                        <tbody>
                            {
                            <tr>
                                <td>@Html.DisplayFor(model => model.Id)</td>
                                <td>@Html.DisplayFor(model => model.CatId)</td>
                                <td>@Html.DisplayFor(model => model.Name)</td>
                                <td>@Html.DisplayFor(model => model.SupplierId)</td>
                                <td>@Html.DisplayFor(model => model.Price)</td>
                                <td>@Html.DisplayFor(model => model.Qty)</td>
                                <td><img src="~/Public/img/product/@Model.Image" alt="Img" class="img-fluid" /></td>
                                <td>@Html.DisplayFor(model => model.Status)</td>
                                <td>

                                    @*<a href="@Url.Action("Edit","Product", new { id = item.Id })" class="btn-sm btn-primary"><i class="fa fa-edit"></i></a>
                                    <a href="@Url.Action("Details","Product", new { id = item.Id })" class="btn-sm btn-info"><i class="fa fa-eye"></i></a>
                                    <a href="@Url.Action("DelTrash","Product", new { id = item.Id })" class="btn-sm btn-danger"><i class="fa fa-trash"></i></a>*@
                                </td>
                            </tr>
                        </tbody>

                    </table>

                </div> <!-- /.card-footer-->
            </div><!-- /.card -->
        </section><!-- /.content -->
    </div> <!-- /.content-wrapper -->
</div><!-- ./wrapper -->